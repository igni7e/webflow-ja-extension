{
  "manifest_version": 3,
  "name": "Webflow管理画面日本語化",
  "description": "Webflowの管理画面UIを日本語化する拡張機能。CSV用語集による部分置換翻訳に対応。",
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.webflow.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.webflow.com/*"],
      "js": ["utils.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["translation_terms.csv"],
      "matches": ["https://*.webflow.com/*"]
    }
  ],
  "options_page": "options.html"
} 