{
  "manifest_version": 3,
  "name": "Webflow 日本語化",
  "description": "Webflowを日本語で使えるようにするChrome拡張機能。ダッシュボードとデザイナーのUIを日本語に翻訳します。",
  "version": "1.0.2",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://webflow.com/*",
    "https://*.webflow.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://webflow.com/*",
        "https://*.webflow.com/*"
      ],
      "js": ["utils.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["translation_terms.csv"],
      "matches": ["https://webflow.com/*", "https://*.webflow.com/*"]
    }
  ],
  "options_page": "options.html"
} 